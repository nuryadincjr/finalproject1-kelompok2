<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/small_margin"
    android:layout_marginRight="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin">

    <Button
        android:id="@+id/tvTitleTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title"
        android:padding="@dimen/small_padding"
        android:textStyle="bold"
        android:text="@string/str_task_completed"
        app:drawableRightCompat="@drawable/ic_more" />

    <TextView
        android:id="@+id/tvDetailTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleTask"
        android:padding="@dimen/medium_padding"
        android:background="@drawable/bg_item_rounded"
        android:text="@string/str_lorem"
        android:textColor="@color/black" />

</RelativeLayout>